{
  "name": "valet-parking",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["frontend", "backend"],
  "scripts": {
    "dev": "concurrently -k \"npm:dev:backend\" \"npm:dev:frontend:wait\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:frontend:wait": "wait-on http://localhost:4000/health -t 30000 && npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=backend && npm run build --workspace=frontend",
    "start": "concurrently -k \"npm:start:backend\" \"npm:start:frontend:wait\"",
    "start:backend": "npm run start --workspace=backend",
    "start:frontend:wait": "wait-on http://localhost:4000/health -t 15000 && npm run start --workspace=frontend"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "wait-on": "^8.0.0"
  }
}
